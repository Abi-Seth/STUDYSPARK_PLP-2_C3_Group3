import time

class StudySession:
    def __init__(self, user):
        self.user = user
        self.session_name = None
        self.duration = 0
        self.status = "Not Started"
        self.start_time = None
        self.end_time = None

    def start_session(self):
        if self.user == "":  # If the user isn't registered
            print("Please register before starting a session.")
            return

        self.session_name = input("Enter the study session name: ")
        self.duration = int(input("Enter the duration of the session in minutes: "))

        # Start the session
        self.start_time = time.time()
        self.status = "In Progress"
        print(f"\nSession '{self.session_name}' has started for {self.user}.")
        print(f"Duration: {self.duration} minutes. Stay focused!")

    def end_session(self):
        if self.start_time is None:
            print("Session hasn't started yet!")
            return

        self.end_time = time.time()
        elapsed_time = (self.end_time - self.start_time) / 60  # Convert seconds to minutes
        self.status = "Completed"
        print(f"\nSession '{self.session_name}' completed!")
        print(f"Total time spent: {elapsed_time:.2f} minutes.")

# Main program loop
if __name__ == "__main__":
    user_name = input("Enter your name: ")

    # Check if the user is registered (you can add more checks as needed)
    if user_name == "":
        print("You must register first.")
    else:
        session = StudySession(user_name)

        # Starting the session
        session.start_session()

        # Allow the user to end the session
        input("Press Enter to end the session...")
        session.end_session()
